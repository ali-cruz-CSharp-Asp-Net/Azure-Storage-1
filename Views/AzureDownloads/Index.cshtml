@model List<Azure.Storage.Blobs.Models.BlobItem>

<h2>Listado de archivos en Azure Storage Emulator</h2>

@if (Model.Count == 0)
{
    <p>No blob files found.</p>
}
else
{
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Size (bytes)</th>
                <th>Download</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var blobItem in Model)
            {
                <tr>
                    <td>@blobItem.Name</td>
                    <td>@blobItem.Properties.ContentLength</td>
                    <td>@Html.ActionLink("Download", "DownloadFile", new { fileName = blobItem.Name })</td>
                </tr>
            }
        </tbody>
    </table>
}
